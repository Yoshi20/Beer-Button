- @page_title = t('orders.open.title')

= turbo_stream_from 'open_orders'

.grid
  .s12
    %p
      = "Total orders count ="
      %span{id: 'open-orders-count'}= @orders.count


.order-list{data: { controller: "orders" }}
  %table.table.table-hover.table-dark{style: 'margin-bottom: 0; background-color: #20282e;'}
    %tbody.order-list-body#orders
      - @orders.each do |order|
        = render partial: 'single_order', locals: {order: order}



  %div{data: { action: "click->orders#close" }, style: "cursor: context-menu;"}
    = 'blup'
-#blup = action_cable_meta_tag
