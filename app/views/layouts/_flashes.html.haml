- if flash.any?
  - toast_colors_hash = { recaptcha_error: 'pink', alert: 'pink', warn: 'orange', notice: 'green' }
  - toast_icons_hash = { recaptcha_error: 'error', alert: 'error', warn: 'warning', notice: 'done' }
  - flash.each do |key, value|
    - if value.present?
      .snackbar.white-text{class: toast_colors_hash[key.to_sym]}
        %i= toast_icons_hash[key.to_sym]
        %span= value.html_safe

  :javascript
    document.addEventListener("turbo:load", function (e) {
      if (document.getElementsByClassName('snackbar').length > 0 && ui != undefined) {
        ui('.snackbar', 6000);
      }
    })
